<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.toyota.showcase.ui.MainFragment"
        android:label="Toyota Showcase"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.toyota.showcase.ui.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/activity_favorites">
        <action
            android:id="@+id/action_favoritesFragment_self"
            app:destination="@id/favoritesFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/favoritesFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation> 